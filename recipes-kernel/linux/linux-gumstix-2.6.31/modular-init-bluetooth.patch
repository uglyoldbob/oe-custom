diff -Naur linux-2.6.26.orig/net/bluetooth/af_bluetooth.c linux-2.6.26/net/bluetooth/af_bluetooth.c
--- linux-2.6.26.orig/net/bluetooth/af_bluetooth.c	2008-07-13 22:51:29.000000000 +0100
+++ linux-2.6.26/net/bluetooth/af_bluetooth.c	2008-07-24 14:33:58.000000000 +0100
@@ -370,12 +370,20 @@
 	.create	= bt_sock_create,
 };
 
+#ifdef CONFIG_ARCH_GUMSTIX
+extern void gumstix_bluetooth_load(void);
+#endif
+
 static int __init bt_init(void)
 {
 	int err;
 
 	BT_INFO("Core ver %s", VERSION);
 
+#ifdef CONFIG_ARCH_GUMSTIX
+	gumstix_bluetooth_load();
+#endif
+
 	err = bt_sysfs_init();
 	if (err < 0)
 		return err;
